<h1> States and things </h1>


<% @posts.each do |post| %>
  <a href="/<%= post[:id] %>">
    <h3><%= post[:title] %></h3>
  </a>
  <a href="/<%= post[:id]%>/edit">Edit</a>

  <form action="/<%= post[:id] %>" method="post">
    <input type="submit" value="DELETE">
    <input type="hidden" name="_method" value="DELETE">
  </form>

<% end %>
